# ============================================
# VARIABLES D'ENVIRONNEMENT POUR DOCKER
# ============================================
# Copier ce fichier vers .env pour docker-compose
# cp docker/env.docker.example .env
# ============================================

# ==========================================
# APPLICATION
# ==========================================
APP_NAME=MPPEEP Dashboard
ENV=production
DEBUG=false
SECRET_KEY=changeme-super-secret-key-in-production-docker

# ==========================================
# POSTGRESQL (Service db dans docker-compose)
# ==========================================
POSTGRES_USER=mppeep_user
POSTGRES_PASSWORD=mppeep_secure_password_change_this
POSTGRES_DB=mppeep
POSTGRES_PORT=5432
POSTGRES_HOST=db  # Nom du service dans docker-compose

# ==========================================
# SECURITY & CORS
# ==========================================
ALLOWED_HOSTS=localhost,127.0.0.1,mppeep.com
CORS_ALLOW_ALL=false

# ==========================================
# MIDDLEWARES
# ==========================================
ENABLE_HTTPS_REDIRECT=false
ENABLE_CORS=true
ENABLE_GZIP=true
ENABLE_SECURITY_HEADERS=true
ENABLE_LOGGING=true
ENABLE_REQUEST_ID=true
ENABLE_CACHE_CONTROL=true
ENABLE_CSP=true
ENABLE_ERROR_HANDLING=true
ENABLE_IP_FILTER=false
ENABLE_USER_AGENT_FILTER=false
ENABLE_REQUEST_SIZE_LIMIT=true

# ==========================================
# PORTS
# ==========================================
APP_PORT=8000

# ==========================================
# PGADMIN (Optionnel)
# ==========================================
PGADMIN_EMAIL=admin@mppeep.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050


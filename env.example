# ============================================
# MPPEEP Dashboard - Configuration Exemple
# ============================================
#
# Instructions:
# 1. Copier ce fichier vers .env
# 2. Modifier les valeurs selon votre environnement
# 3. Ne JAMAIS commiter le fichier .env
#
# cp env.example .env
#

# ============================================
# APPLICATION
# ============================================
APP_NAME=MPPEEP Dashboard
ENV=dev
DEBUG=true
SECRET_KEY=changeme-super-secret-key-in-production

# Chemin racine de l'application (utilisé derrière un proxy/Cloudflare)
# Exemple : Si votre app est accessible sur https://domain.com/mppeep/
# alors ROOT_PATH=/mppeep
# Laisser vide ou commenter si l'app est à la racine du domaine
ROOT_PATH=/mppeep

# ============================================
# DATABASE
# ============================================

# Automatique selon DEBUG :
# - DEBUG=true  → SQLite
# - DEBUG=false → PostgreSQL

# SQLite (Développement)
SQLITE_DB_PATH=./app.db

# PostgreSQL (Production)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=mppeep

# Override manuel (optionnel)
# DATABASE_URL=postgresql://user:pass@host:5432/db
# DATABASE_URL=sqlite:///./custom.db

# ============================================
# SECURITY & CORS
# ============================================
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ALLOW_ALL=false

# ============================================
# MIDDLEWARES (true/false)
# ============================================

# Production seulement
ENABLE_HTTPS_REDIRECT=false

# Toujours actifs (recommandé)
ENABLE_CORS=true
ENABLE_GZIP=true
ENABLE_SECURITY_HEADERS=true
ENABLE_LOGGING=true
ENABLE_REQUEST_ID=true
ENABLE_CACHE_CONTROL=true
ENABLE_CSP=true
ENABLE_ERROR_HANDLING=true

# Sécurité avancée (optionnel)
ENABLE_IP_FILTER=false
ENABLE_USER_AGENT_FILTER=false

# Performance
ENABLE_REQUEST_SIZE_LIMIT=true

# ============================================
# EMAIL (Configuration SMTP)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=votre-email@gmail.com
SMTP_PASSWORD=votre-mot-de-passe-app
SMTP_FROM=noreply@mppeep.com

# ============================================
# CLOUDFLARE (Déploiement)
# ============================================
CLOUDFLARE_API_TOKEN=your-api-token-here
CLOUDFLARE_ZONE_ID=your-zone-id-here
CLOUDFLARE_DOMAIN=example.com

# ============================================
# MONITORING & LOGS
# ============================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ============================================
# NOTIFICATIONS (Optionnel)
# ============================================
SLACK_WEBHOOK=https://hooks.slack.com/services/...
DISCORD_WEBHOOK=https://discord.com/api/webhooks/...

# ============================================
# LIMITES & QUOTAS
# ============================================
MAX_REQUEST_SIZE=10485760
MAX_LOGIN_ATTEMPTS=5
SESSION_TIMEOUT=3600
PASSWORD_MIN_LENGTH=8

# ============================================
# FIN
# ============================================

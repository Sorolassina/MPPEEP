# Application
APP_NAME=MPPEEP Dashboard
ENV=production
DEBUG=false
SECRET_KEY=CHANGEZ_MOI_AVEC_UNE_CLE_SECURISEE_LONGUE_ET_ALEATOIRE

# Base de données PostgreSQL
DATABASE_URL=postgresql://mppeep_user:MOT_DE_PASSE_SECURISE@localhost:5432/mppeep_prod

# Ou configuration séparée
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=mppeep_prod
POSTGRES_USER=mppeep_user
POSTGRES_PASSWORD=MOT_DE_PASSE_SECURISE

# CORS & Sécurité
ALLOWED_HOSTS=mondomaine.com,www.mondomaine.com,api.mondomaine.com
CORS_ALLOW_ALL=false

# Middlewares (Production)
ENABLE_HTTPS_REDIRECT=true
ENABLE_CORS=true
ENABLE_GZIP=true
ENABLE_SECURITY_HEADERS=true
ENABLE_LOGGING=true
ENABLE_REQUEST_ID=true
ENABLE_CACHE_CONTROL=true
ENABLE_CSP=true
ENABLE_ERROR_HANDLING=true
ENABLE_REQUEST_SIZE_LIMIT=true

# Optionnels (activer si nécessaire)
ENABLE_IP_FILTER=false
ENABLE_USER_AGENT_FILTER=false

# Email (optionnel - pour envoi d'emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=votre@email.com
